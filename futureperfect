#!/usr/bin/env ruby

require_relative 'bootstrap_ar'

# ARGV = [add, foo]
command = ARGV[0]

if command == "add"
  project_name = ARGV[1]
  Project.create(name: project_name)
elsif command == "list"
  projects = Project.all
  projects.each_with_index do |project, i|
    puts "#{i+1}. #{project.name}"
  end
end
